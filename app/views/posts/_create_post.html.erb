<%= simple_form_for(@post) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :title, label: 'Title here', error: 'Title cannot be blank', autofocus: true, label_html: {class: "label"}, wrapper: false %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :body, label: 'Your opinion', input_html: {class: "textarea"}, wrapper: false %>
    </div>
  </div>
  <%= f.button :submit, class: 'button is-primary' %>
<% end %>