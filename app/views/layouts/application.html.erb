<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class = "navbar is-black">
      <div class = "navbar-brand">
        <div class = "navbar-item">
          <%= link_to root_path do %>
            <h1 class = "title is-5 is-light">ClubHouse</h1>
          <% end %>
        </div>
      </div>
      <% if user_signed_in? %>
        <div class="navbar-item status">
          <%= current_user.name %>
          <%= current_user.status %>
        </div>
        <div class= "navbar-end">
          <div class = "navbar-item">
            <%= link_to 'New Post', new_post_path, class: 'button is-primary'%>
          </div>
          <div class= "navbar-item">
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'button is-danger'%>
          </div>
        </div>
      <% else %>
        <div class="navbar-end">
          <div class ="navbar-item">
            <%= link_to 'Sign In', new_user_session_path, class: 'button is-primary'%>
          </div>
          <div class = "navbar-item">
            <%= link_to 'Sign Up', new_user_registration_path, class: 'button is-primary'%>
          </div>
        </div>
      <% end %>
      </nav>
    
    <%= yield %>
  </body>
</html>
