<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div>
      <%= link_to root_path do %>
        <h1>ClubHouse</h1>
      <% end %>
    </div>
    <% if user_signed_in? %>
      <div>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'button is-info'%>
      </div>
      <div>
        <%= link_to 'New Post', new_post_path, class: 'button is-info'%>
      </div>
    <% else %>
      <div>
        <%= link_to 'Sign In', new_user_session_path, class: 'button is-info'%>
      </div>
      <div>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'button is-info'%>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
